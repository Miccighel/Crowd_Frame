{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [
            "node"
        ],
        // Explicitly re-declare target + libs for the application context
        "target": "ES2022",
        // ðŸ‘‡ Keep DOM.Iterable here too so Angular compiler sees it during template check
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "downlevelIteration": false
        // safe with ES2022 target
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts"
    ]
}
